#include <bits/stdc++.h>
double median(vector<int>& a, vector<int>& b) {
	priority_queue<int> maxi;
	priority_queue<int, vector<int>, greater<int>> mini;
	vector<int> ans;
	for(auto x:a){
		if(maxi.empty() or x<=maxi.top()){
			maxi.push(x);
		}
		else{
			mini.push(x);
		}
		if(maxi.size()>mini.size()+1){
			int r=maxi.top();
			mini.push(r);
			maxi.pop();
		}
		else if(mini.size()>maxi.size()+1){
			int r=mini.top();
			maxi.push(r);
			mini.pop();
		}
	}
	for(auto x:b){
		if(maxi.empty() or x<=maxi.top()){
			maxi.push(x);
		}
		else{
			mini.push(x);
		}
		if(maxi.size()>mini.size()+1){
			int r=maxi.top();
			mini.push(r);
			maxi.pop();
		}
		else if(mini.size()>maxi.size()+1){
			int r=mini.top();
			maxi.push(r);
			mini.pop();
		}
	}
	if(maxi.size()==mini.size()){
		double r=(maxi.top()+mini.top())/2.0;
		return r;
	}
	else if(maxi.size()>mini.size()) return maxi.top();
	return mini.top();
}
